FROM node:lts-alpine

# Create app directory
WORKDIR /app

# Install dependencies
COPY package.json package-lock.json ./
RUN npm ci --ignore-scripts

# Copy source
COPY . ./

# Expose no port since this is stdio

# Default command
CMD ["node", "src/index.js"]
